    sys::dump[[[4]byte]](a);
    std::slice[[byte]]::reverse(a[0:countof(a)]);
    sys::dump[[[4]byte]](a);

    var a = (:[1]byte)[0xAA];
    std::slice[[byte]]::reverse(a[0:countof(a)]);
    sys::dump[[[1]byte]](a);
    std::slice[[byte]]::reverse(a[0:countof(a)]);
    sys::dump[[[1]byte]](a);

    var a = (:[0]byte)[];
    std::slice[[byte]]::reverse(a[0:countof(a)]);
    sys::dump[[[0]byte]](a);
    std::slice[[byte]]::reverse(a[0:countof(a)]);
    sys::dump[[[0]byte]](a);
}
