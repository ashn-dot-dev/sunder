    std::slice[[byte]]::reverse(a[0:countof(a)]);
    sys::dump[[[5]byte]](a);
    std::slice[[byte]]::reverse(a[0:countof(a)]);
    sys::dump[[[5]byte]](a);

    var a = (:[4]byte)[0xAA, 0xBB, 0xCC, 0xDD];
