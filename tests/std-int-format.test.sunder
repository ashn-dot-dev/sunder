import "std";

func format_test0() void {
    var a: u32 = 0xDEADBEEF;
    var a_fmtr: std::formatter = std::formatter::init[[u32]](&a);

    var args: [1]std::formatter = (:[1]std::formatter)[a_fmtr];
    std::print_format_line(std::out(), "{}", args[0:countof(args)]);
    std::print_format_line(std::out(), "{#}", args[0:countof(args)]);
}

