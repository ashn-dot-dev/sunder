func test_add(allocator: std::allocator, lhs: []byte, rhs: []byte) void {
    var result = std::big_decimal::init_from_str(allocator, lhs);
    var x = result.value();
    defer { x.fini(); }

    var result = std::big_decimal::init_from_str(allocator, rhs);
    var y = result.value();
    defer { y.fini(); }

    var z = std::big_decimal::init(allocator);
    defer { z.fini(); }

    std::big_decimal::add(&z, &x, &y);

    std::print_format_line(
        std::out(),
        "{} = {} + {}",
        (:[]std::formatter)[
            std::formatter::init[[std::big_decimal]](&z),
            std::formatter::init[[std::big_decimal]](&x),
            std::formatter::init[[std::big_decimal]](&y)]);
}

