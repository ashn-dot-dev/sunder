import "std/big_decimal.sunder";
import "std/core.sunder";
import "std/general_allocator.sunder";

func test_init(allocator: std::allocator) void {
    var x = std::big_decimal::init(allocator);
    defer { x.fini(); }
    std::print_format_line(
        std::out(),
        "{}",
        (:[]std::formatter)[std::formatter::init[[std::big_decimal]](&x)]);
}

func test_init_from_int[[T]](allocator: std::allocator, scale: usize, int: T) void {
    var x = std::big_decimal::init_from_int[[T]](allocator, scale, int);
    defer { x.fini(); }
    std::print_format_line(
        std::out(),
        "{}",
        (:[]std::formatter)[std::formatter::init[[std::big_decimal]](&x)]);
}

func test_init_from_str(allocator: std::allocator, str: []byte) void {
    var result = std::big_decimal::init_from_str(allocator, str);
    if result.is_error() {
        std::print_format_line(
            std::out(),
            "{}",
            (:[]std::formatter)[std::formatter::init[[[]byte]](&result.error().*.data)]);
        return;
    }
    var x = result.value();
    defer { x.fini(); }
    std::print_format_line(
        std::out(),
        "{}",
        (:[]std::formatter)[std::formatter::init[[std::big_decimal]](&x)]);
}

func test_scale(allocator: std::allocator, str: []byte) void {
    var result = std::big_decimal::init_from_str(allocator, str);
    var x = result.value();
    defer { x.fini(); }
    var scale = x.scale();
    std::print_format_line(
        std::out(),
        "scale = {}",
        (:[]std::formatter)[std::formatter::init[[usize]](&scale)]);
}

func test_set_scale(allocator: std::allocator, initial: []byte, new_scale: usize) void {
    var result = std::big_decimal::init_from_str(allocator, initial);
    var x = result.value();
    defer { x.fini(); }
    x.set_scale(new_scale);
    var scale = x.scale();
    std::print_format_line(
        std::out(),
        "{}, scale = {}",
        (:[]std::formatter)[
            std::formatter::init[[std::big_decimal]](&x),
            std::formatter::init[[usize]](&scale)]);
}

func test_assign(allocator: std::allocator, lhs: []byte, rhs: []byte) void {
    var result = std::big_decimal::init_from_str(allocator, lhs);
    var x = result.value();
    defer { x.fini(); }

    var result = std::big_decimal::init_from_str(allocator, rhs);
    var y = result.value();
    defer { y.fini(); }

    std::big_decimal::assign(&x, &y);

    std::print_format_line(
        std::out(),
        "{} <- {}",
        (:[]std::formatter)[
            std::formatter::init[[std::big_decimal]](&x),
            std::formatter::init[[std::big_decimal]](&y)]);
}

func test_compare(allocator: std::allocator, lhs: []byte, rhs: []byte) void {
    var result = std::big_decimal::init_from_str(allocator, lhs);
    var x = result.value();
    defer { x.fini(); }

    var result = std::big_decimal::init_from_str(allocator, rhs);
    var y = result.value();
    defer { y.fini(); }

    var cmp = std::big_decimal::compare(&x, &y);

    std::print_format_line(
        std::out(),
        "compare {} and {}: {}",
        (:[]std::formatter)[
            std::formatter::init[[std::big_decimal]](&x),
            std::formatter::init[[std::big_decimal]](&y),
            std::formatter::init[[ssize]](&cmp)]);
}

